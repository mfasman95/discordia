{
  "name": "discordia",
  "version": "1.0.0",
  "private": true,
  "description": "A discord bot for posting magic decklists",
  "keywords": [
    "discord",
    "bot",
    "framework",
    "eris",
    "golden apple"
  ],
  "homepage": "https://github.com/mfasman95/discordia#readme",
  "bugs": {
    "url": "https://github.com/mfasman95/discordia/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfasman95/discordia.git"
  },
  "license": "MIT",
  "author": "",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "commit:retry": "git-cz --retry",
    "commitmsg": "commitlint -e",
    "docs:build": "rm -rf docs/ && node docma.js",
    "docs:dev": "nodemon --watch packages/ --watch guides/ --watch docma.js --exec npm run serveDocs",
    "// docs:publish": "npm run docs:build && gh-pages -d docs/",
    "docs:serve": "DOCMA_BASE=/ npm run docma && light-server -s docs",
    "lint": "eslint .",
    "publish-ci": "lerna publish from-package -y --no-verify-access",
    "sortPackage": "sort-package-json && lerna run sortPackage",
    "test": "jest",
    "test:watch": "jest --watch",
    "preversion": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "commitizen.config.js"
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "env": {
      "jest/globals": true
    },
    "plugins": [
      "jest",
      "prettier",
      "jsdoc"
    ],
    "extends": [
      "airbnb-base",
      "plugin:jsdoc/recommended"
    ],
    "rules": {
      "comma-dangle": "off",
      "function-paren-newline": "off",
      "implicit-arrow-linebreak": "off",
      "indent": "off",
      "max-len": "off",
      "object-curly-newline": "off",
      "import/no-extraneous-dependencies": "off",
      "prettier/prettier": "error"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@discordia/action": "file:packages/action",
    "@discordia/complete": "file:packages/complete",
    "@discordia/debug": "file:packages/debug",
    "@discordia/framework": "file:packages/framework",
    "@discordia/help-default": "file:packages/help-default"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.5",
    "conventional-changelog-cli": "^2.0.31",
    "cz-customizable": "^6.2.0",
    "docma": "^3.2.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsdoc": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lerna": "^3.20.2",
    "light-server": "^2.6.4",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "sort-package-json": "^1.42.2"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6.10"
  }
}
